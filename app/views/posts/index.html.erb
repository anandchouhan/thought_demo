<%= search_form_for @q, :url => search_posts_path, :html => {:method => :post} do |f| %>
  Searching text
  <%= f.search_field :body_cont %>
  <%#= f.search_field :comments_comnt_body_cont %>
  <%= f.submit %>
<% end %>


<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :body) %></th>
